<div id="review-<%= review.id %>">
  <div class="row">
    <div class="col-md-2">
      <img src="https://image.ibb.co/jw55Ex/def_face.jpg" class="img img-rounded img-fluid"/>
      <p class="text-secondary text-center"><span><%= t "review_content1" %>
      <%= time_ago_in_words(review.created_at) %><%= t "review_content2" %></span></p>
    </div>
    <div class="col-md-10">
      <p>
        <strong><%= link_to review.tour.name, review.tour, class:"card-link" %></strong>
        <span class="float-right"><i id="1" class="text-warning fa fa-star-o"
          onclick="set('1')"></i></span>
        <span class="float-right"><i id="2" class="text-warning fa fa-star-o"
          onclick="set('2')"></i></span>
        <span class="float-right"><i id="3" class="text-warning fa fa-star-o"
          onclick="set('3')"></i></span>
        <span class="float-right"><i id="4" class="text-warning fa fa-star-o"
          onclick="set('4')"></i></span>
        <span class="float-right"><i id="5" class="text-warning fa fa-star-o"
          onclick="set('5')"></i></span>
      </p>
      <div class="clearfix"></div>
      <p><%= review.content %></p>
      <p>
        <%= link_to  "#", class:"float-right btn btn-outline-primary ml-2" do %>
         <i class="fa fa-reply"></i> <%= t "reply" %>
        <% end %>
      </p>
    </div>
  </div>
</div>
