<div class="col-sm-4 pb-30">
  <div class="panel panel-default" id="tour-<%= tour.id %>">
    <div class="panel-heading">
      <%= tour.name %>
    </div>
    <div class="panel-body">
      <%= image_tag tour.picture.url, size: Settings.tour.picture_home if tour.picture? %>
      <p class="tour_content"><%= tour.description %></p>
      <%= link_to t("link_tour"), tour, class:"btn-primary p-10"%>
    </div>
  </div>
</div>
